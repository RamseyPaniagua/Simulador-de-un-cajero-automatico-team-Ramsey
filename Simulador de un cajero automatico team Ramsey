funcion consultar(monto)
	escribir "monto"
	monto = "1,000,000"

FinFuncion



funcion depositar(cantidad)
	escribir "introdusca el dinero a depositar"
	
FinFuncion



funcion retirar(x)
	
FinFuncion


funcion transferir_dinero
	
FinFuncion




Algoritmo Simulador_de_un_cajero_automatico_team_Ramsey
    Definir codigo_secreto, intentos, opcion Como Entero
    Definir acceso_concedido Como Logico
    Definir tarjeta Como Cadena
    
    acceso_concedido <- Falso
    intentos <- 0
    
    Escribir "Inserte la tarjeta"
    Leer tarjeta  
	
    Repetir
        intentos <- intentos + 1
		
        Escribir "Intento ", intentos, " de 3 - Ingrese el codigo secreto:"
		
        Leer codigo_secreto
		
        
        Si codigo_secreto = 1234 Entonces
			
            acceso_concedido <- Verdadero
			
            Escribir "Codigo correcto. Acceso concedido."
			
        Sino
			
            Si intentos < 3 Entonces
				
                Escribir "Codigo incorrecto. Le quedan ", 3-intentos, " intentos."
				
                Escribir ""
				
            FinSi
			
        FinSi
		
    Hasta Que acceso_concedido O intentos = 3
    
    Si NO acceso_concedido Entonces
		
        Escribir "Demasiados intentos fallidos. Tarjeta bloqueada."
		
    Sino
        Dimension menu[2,3]  
        menu[0,0] <- "1. Consultar saldo"
        menu[0,1] <- "2. Depositar dinero"
        menu[0,2] <- "3. Retirar dinero"
        menu[1,0] <- "4. Historial de transacciones"
        menu[1,1] <- "5. Transferir fondos"
        menu[1,2] <- "6. Salir"
        
        Escribir ""
		
        Escribir "----- MENÚ PRINCIPAL -----"
		
        Para i <- 0 Hasta 1 Hacer
			
            Para j <- 0 Hasta 2 Hacer
				
                Escribir Sin Saltar menu[i,j], "   "
				
            FinPara
			
            Escribir ""
			
        FinPara
        
        Escribir "------------------------------"
		
        Escribir "Seleccione una opcion (1-6): "
		
        Leer opcion
        
        Si opcion >= 1 Y opcion <= 6 Entonces
			
            Escribir "Ha seleccionado: ", menu[(opcion-1) / 3, (opcion-1) % 3]
			
        Sino
			
            Escribir "Opción invalida."
			
        FinSi
    FinSi
FinAlgoritmo
